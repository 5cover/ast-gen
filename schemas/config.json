{
  "$schema": "https://json-schema.org/draft-07/schema",
  "title": "mkast config",
  "type": "object",
  "properties": {
    "input": {
      "type": "string"
    },
    "known_types": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^([A-Za-z_]\\w*)(?:\\.[A-Za-z_]\\w*)*$"
      }
    },
    "root": {
      "type": "string",
      "pattern": "^[A-Za-z_]\\w*$"
    },
    "common_props": {
      "type": "object",
      "propertyNames": {
        "type": "string",
        "pattern": "^[A-Za-z_]\\w*$"
      },
      "additionalProperties": {
        "type": "string",
        "pattern": "^=?([A-Za-z_]\\w*)(?:\\.[A-Za-z_]\\w*)*[?+*]*$"
      }
    },
    "target": {
      "type": "string"
    },
    "namespace": {
      "type": "string",
      "pattern": "^([A-Za-z_]\\w*)(?:\\.[A-Za-z_]\\w*)*$"
    }
  }
}